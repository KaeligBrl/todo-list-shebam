{% extends 'back/index.html.twig' %}

{% block title %}Liste des tâches archivées - {% block title_base %}{{ parent() }}{% endblock %}{% endblock %}

{% block body %}

		<link rel="stylesheet" href="{{ asset('assets/js/custom.js') }}">

	<div>
		{% block titre_admin_page %}{% block title_titre_admin_page_base %}{{ parent() }}{% endblock %}Liste des tâches archivées {% endblock %}
	</div>
	{% block admin_utilisateur %}
		<div class="container">
			<div class="text-center bg-yellow-shebam color-white-shebam p-3">Priorité 1
			</div>
			<table class="table table-striped table-light" data-toggle="table">
				<thead class="bg-grey-shebam color-white-shebam">
					<tr>
						<th scope="col">Client</th>
						<th scope="col">Sujet</th>
						<th scope="col">Personne(s)</th>
						<th scope="col">Remarque</th>
						<th scope="col">Statut</th>
						<th scope="col">Action</th>
					</tr>
				</thead>
				<tbody>
						{% for task in task %}
                        	{% if task.archived == 1 %}
                                <tr>
                                    <td>{{task.customer}}</td>
                                    <td>{% if task.subject is empty %}{% else %}{{task.subject}}<br>{% endif %}
                                        {% if task.subsubject1 is empty %}{% else %}{{task.subsubject1}}<br>{% endif %} 
                                        {% if task.subsubject2 is empty %}{% else %}{{task.subsubject2}}<br>{% endif %}
                                        {% if task.subsubject3 is empty %}{% else %}{{task.subsubject3}}<br>{% endif %}
                                    </td>
                                    <td>{% for task in task.users %}
                                            {{ task.firstname }} <br>
                                        {% endfor %}
                                    </td>
                                    <td>{{task.comment}}</td>
                                    <td>{{task.status.name|raw}}</td>
                                    <td>
                                        <a href="{{ path('task_list_detete_admin', {"id": task.id}) }}" onclick="return confirm('Attention vous vous apprettez à supprimer une tâche')"><i class="fas fa-trash"></i></a>
                                            |
                                        <a href="{{ path('taskp1_unarchived_admin', {"id": task.id}) }}"><i class="fas fa-folder-minus"></i></a>							
                                    </td>
                                </tr>
                            {% endif %}
						{% endfor %}
				</tbody>
			</table>

			<div class="mb-4"></div>

			<div class="text-center bg-pink-shebam color-white-shebam p-3">Rendez-vous</div>
			<table class="table table-striped table-light" data-toggle="table">
				<thead class="bg-grey-shebam color-white-shebam">
					<tr>
						<th scope="col">Entreprise</th>
						<th scope="col">Sujet</th>
						<th>Personne(s)</th>
						<th scope="col">Date et heure</th>
						<th scope="col">Statut</th>
						<th scope="col">Action</th>
					</tr>
				</thead>
				<tbody>
					{% for appointment in appointment %}
						{% if appointment.archived == 1 %}
							<tr>
								<td>{{appointment.name}}</td>
								<td>{{appointment.subject}}</td>
								<td>
								{% for appointment in appointment.user %}
									{{ appointment.firstname }} <br>
								{% endfor %}
								</td>
								<td>{{ appointment.hoursappointment|date('d-m-Y')  }} à {{appointment.hoursappointment|date('H:i')}}</td>
								<td>{{appointment.statut|raw}}</td>
								<td>
									<a href="{{ path('task_appointment_detete_admin', {"id": appointment.id}) }}" onclick="return confirm('Attention vous vous apprettez à supprimer un rendez-vous')"><i class="fas fa-trash"></i></a>					
										|
									<a href="{{ path('appointment_unarchived_admin', {"id": appointment.id}) }}" ><i class="fas fa-folder-minus"></i></a>
								</td>
							</tr>
						{% endif %}
					{% endfor %}
				</tbody>
			</table>

			<div class="mb-5"></div>

			<div class="text-center bg-blue-light-shebam color-white-shebam p-3 align-bottom">Devis</div>
			<table class="table table-striped table-light" data-toggle="table">
				<thead class="bg-grey-shebam color-white-shebam">
					<tr>
						<th scope="col">Entreprise</th>
						<th scope="col">Sujet</th>
						<th scope="col">Personne(s)</th>
						<th scope="col">Remarque</th>
						<th scope="col">Statut</th>
						<th scope="col">Action</th>
					</tr>
				</thead>
				<tbody>
					{% for quote in quote %}
						{% if quote.archived == 1 %}
							<tr>
								<td>{{ quote.enterprise }}</td>
								<td>{{ quote.subject }}</td>
								<td>
								{% for quote in quote.person %}
									{{ quote.firstname }} <br>
								{% endfor %}
								</td>
								<td>{{ quote.comment }}</td>
								<td>{{ quote.status|raw }}</td>
								<td>
									<a href="{{ path('task_quote_detete_admin', {"id": quote.id}) }}" onclick="return confirm('Attention vous vous apprettez à supprimer un devis')"><i class="fas fa-trash"></i></a>
									|
									<a href="{{ path('quote_unarchived_admin', {"id": quote.id}) }}"><i class="fas fa-folder-minus"></i></a>
								</td>
							</tr>
						{% endif %}
					{% endfor %}
				</tbody>
			</table>

			<div class="mb-5"></div>

			<div class="text-center bg-green-light-shebam color-white-shebam p-3">Priorité 2</div>
			<table class="table table-striped table-light" data-toggle="table">
				<thead class="bg-grey-shebam color-white-shebam">
					<tr>
						<th scope="col">Client</th>
						<th scope="col">Sujet</th>
						<th scope="col">Personne(s)</th>
						<th scope="col">Remarque</th>
						<th scope="col">Statut</th>
						<th scope="col">Action</th>
					</tr>
				</thead>
				<tbody>
					{% for task2 in task2 %}
                        {% if task2.archived == 1 %}
                            <tr>
                                <td>{{task2.customer}}</td>
                                <td>{% if task2.subject is empty %}{% else %}{{task2.subject}}<br>{% endif %}
                                    {% if task2.subsubject1 is empty %}{% else %}{{task2.subsubject1}}<br>{% endif %} 
                                    {% if task2.subsubject2 is empty %}{% else %}{{task2.subsubject2}}<br>{% endif %}
                                    {% if task2.subsubject3 is empty %}{% else %}{{task2.subsubject3}}<br>{% endif %}
                                </td>
                                <td>{% for task2 in task2.users %}
                                        {{ task2.firstname }} <br>
                                    {% endfor %}
                                </td>
                                <td>{{task2.comment}}</td>
                                <td>{{task2.status.name|raw}}</td>
                                <td>
                                    <a href="{{ path('task_list_admin', {"id": task2.id}) }}" onclick="return confirm('Attention vous vous apprettez à supprimer une tâche P2')"><i class="fas fa-trash"></i></a>	
                                    |
                                    <a href="{{ path('task2_unarchived_admin', {"id": task2.id}) }}"><i class="fas fa-folder-minus"></i></a>		
                                </td>
                            </tr>
                        {% endif %}
					{% endfor %}
				</tbody>
			</table>

			<div class="mb-5"></div>
			{% set taskbool = true %}
            {% for task in task %}
                {% for appointment in appointment %}
                    {% for quote in quote %}
                        {% for task2 in task2 %}
							{% if taskbool %}
                            	{% if task.archived == false or appointment.archived == false or quote.archived == false or task2.archived == false %}
                                	<p class="color-blue-dark-shebam">Téléchargement indisponible !</p>
                                	<p class="color-blue-dark-shebam">Les tableaux doivent avoir au moins un enregistrement.</p>
                            	{% else %}	
                                	<div class="mt-3 text-center btn-submit-admin-shebam btn"><a href="{{path('button_list_download_admin') }}">Télécharger la liste des tâches</a></div>
								{% endif %}
							{% endif %}
							{% set taskbool = false %}
                        {% endfor %}
                    {% endfor %}
                {% endfor %}
            {% endfor %}
			</div>
        </div>
    </div>  
	{% endblock %}
{% endblock %}
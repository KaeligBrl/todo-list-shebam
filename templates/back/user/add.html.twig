{% extends 'back/index.html.twig' %}

{% block title %}Ajouter un utilisateur - {% block title_base %}{{ parent() }}{% endblock %}{% endblock %}

{% block body %}
	<div>
		{% block titre_admin_page %}Utilisateur - Ajouter{% endblock %}
	</div>
		{% block admin_utilisateur %}
		<div class="was-validated form-back background-login is-valid">
			{% if notification %}
					<div class="alert alert-success">{{ notification }}<br>
						<hr>
						<a href="{{ path('user_admin') }}">Retourner sur la liste</a>
					</div>
				<hr>
			{% endif %}
				{{ form_start(form_admin_user_add) }}
			<div class="form-group">
				{{ form_widget(form_admin_user_add) }}
			</div>
				{{ form_end(form_admin_user_add) }}
		</div>
	{% endblock %}
{% endblock %}



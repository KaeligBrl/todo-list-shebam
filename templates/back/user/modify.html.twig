{% extends 'back/admin.html.twig' %}

{% block title %}Modifier utilisateur - {% block title_base %}{{ parent() }}{% endblock %}{% endblock %}

{% block body %}
	{% block content %}
	<div>
		{% block title_back_page %}Modifier l'utilisateur {{user.firstname}} {{user.lastname}}{% endblock %}
	</div>
		{{ form_start(form_user_modify_admin) }}
		<div class="form-back">
			
			{% if notification %}
					<div class="form-success text-center text-bold">
						{{ notification }}<br>
						<a href="{{ path('user_list') }}">Retourner sur la liste Ã©quipe</a>
					</div>
			{% endif %}
				<div class="form-group">
					{{ form_row(form_user_modify_admin.email) }}
					{{ form_row(form_user_modify_admin.firstname) }}
					{{ form_row(form_user_modify_admin.lastname) }}
					{{ form_row(form_user_modify_admin.roles) }}
					{{ form_row(form_user_modify_admin.submit) }}
				</div>
		</div>
		{{ form_end(form_user_modify_admin) }}
	{% endblock %}
{% endblock %}
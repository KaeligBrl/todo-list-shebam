{% extends 'back/index.html.twig' %}

{% block title %}Liste des tâches - {% block title_base %}{{ parent() }}{% endblock %}{% endblock %}

{% block body %}
	<div>
		{% block titre_admin_page %}{% block title_titre_admin_page_base %}{{ parent() }}{% endblock %}Liste des statuts{% endblock %}
	</div>
	{% block admin_utilisateur %}
		<div class="container">
			<div class="d-flex flex-row-reverse">
				<a href="{{ path('status_add_admin') }}" title="Ajouter un statut" type="button" class="btn btn-outline-light mr-3 mb-3">
					<i class="fas fa-plus-circle"></i>
				</a>
			</div>

			<table class="table table-light">
				<thead class="thead-light">
					<tr>
						<th scope="col">Nom du statut</th>
                        <th scope="col">Action</th>
					</tr>
				</thead>
				<tbody>
					{% for status in status %}
						<tr>
							<td>{{status.name}}</td>
							<td>
								<a href="{{ path('status_modify_admin', {"id": status.id}) }}"><i class="fas fas fa-cog"></i></a>
								|
								<a href="{{ path('status_detete_admin', {"id": status.id}) }}" onclick="return confirm('Attention vous vous apprettez à supprimer un statut')"><i class="fas fa-trash"></i></a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	{% endblock %}
{% endblock %}



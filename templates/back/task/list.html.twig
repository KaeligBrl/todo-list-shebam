{% extends 'back/index.html.twig' %}

{% block title %}Liste des tâches - Administration{% endblock %}

{% block body %}

	<link rel="stylesheet" href="{{ asset('assets/js/custom.js') }}">


		{% block titre_admin_page %}{% block title_titre_admin_page_base %}{{ parent() }}{% endblock %}Liste de nos tâches{% endblock %}

	{% block admin_utilisateur %}
		<div class="container-xxl">
			<div class="row">
				<div class="col">
					<div class="text-center bg-yellow-shebam color-white-shebam p-3 justify-content-md-center">Priorité 1
						<div class="add-icon-custom d-flex flew-row-reverse">			
							<a href="{{ path('task_list_add_admin') }}" title="Ajouter une tâche P1" type="button">
								<i class="fas fa-plus-circle"></i>
							</a>
						</div>
					</div>
					<table id="tableOrderTaskP1" class="table mb-5" data-toggle="table" data-use-row-attr-func="true" data-reorderable-rows="true">
						<thead class="bg-grey-shebam color-white-shebam font-weight-bold">
							<tr>
								<th data-field="id" data-visible="false">ID</th>
								<th data-field="customer" data-sortable="true" scope="col">Sujet</th>
								<th data-field="subject" data-sortable="true" scope="col">Objet</th>
								<th data-field="person" data-sortable="true" scope="col">Personne(s)</th>
								<th scope="col">Action</th>
							</tr>
						</thead>
						<tbody>
							{% for task in task %}
								{% if task.p1 == 1 and task.p2 == 0 %}
									{% if task.archived == 0 %}
										<tr class="bg-white-shebam">
											<td>{{ task.id }}</td>
											<td >{{task.customer}}</td>
											<td>{% if task.object is empty %}{% else %}{{task.object}}<br>{% endif %}
												{% if task.subobject1 is empty %}{% else %}{{task.subobject1}}<br>{% endif %} 
												{% if task.subobject1 is empty %}{% else %}{{task.subobject2}}<br>{% endif %}
												{% if task.subobject1 is empty %}{% else %}{{task.subobject3}}<br>{% endif %}
											</td>
											<td>{% for task in task.users %}
													{{ task.firstname }} <br>
												{% endfor %}
											</td>
											<td>
												<a href="{{ path('task_change_to_p2_front', {"id": task.id}) }}"><span>P2</span></a>
													|
												<a href="{{ path('task_list_modify_admin', {"id": task.id}) }}"><i class="fas fa-cog"></i></a>
													|
												<a href="{{ path('task_archived_front', {"id": task.id}) }}"><i class="fas fa-folder-plus"></i></a>
													|
												<a href="{{ path('task_list_detete_admin', {"id": task.id}) }}" onclick="return confirm('Attention vous vous apprettez à supprimer une tâche P2')"><i class="fas fa-trash"></i></a>
											</td>
										</tr>
									{% endif %}
								{% endif %}
							{% endfor %}
						</tbody>
					</table>
				</div>

				<div class="col">
					<div class="text-center bg-green-light-shebam color-white-shebam p-3">Priorité 2
						<div class="add-icon-custom d-flex flew-row-reverse">				
							<a href="{{ path('task_list_add_admin') }}" title="Ajouter une tâche" type="button">
								<i class="fas fa-plus-circle"></i>
							</a>
						</div>
					</div>
					<table class="table table-striped table-light" data-toggle="table">
						<thead class="bg-grey-shebam color-white-shebam">
							<tr>
								<th scope="col">Sujet</th>
								<th scope="col">Objet</th>
								<th scope="col">Personne(s)</th>
								<th scope="col">Action</th>
							</tr>
						</thead>
						<tbody>
						{% for task in task %}
							{% if task.p1 == 0 and task.p2 == 1 %}
								{% if task.archived == 0 %}
									<tr>
										<td>{{task.customer}}</td>
										<td>
											{% if task.object is empty %}{% else %}{{task.object}}<br>{% endif %}
											{% if task.subobject1 is empty %}{% else %}{{task.subobject1}}<br>{% endif %} 
											{% if task.subobject3 is empty %}{% else %}{{task.subobject2}}<br>{% endif %}
											{% if task.subobject3 is empty %}{% else %}{{task.subobject3}}<br>{% endif %}
										</td>
										<td>{% for task in task.users %}
												{{ task.firstname }} <br>
											{% endfor %}
									</td>
										<td>
											<a href="{{ path('task_change_to_p1_admin', {"id": task.id}) }}"><span>P1</span></a>
												|
											<a href="{{ path('task_list_modify_admin', {"id": task.id}) }}"><i class="fas fa-cog"></i></a>
												|
											<a href="{{ path('task_archived_admin', {"id": task.id}) }}"><i class="fas fa-folder-plus"></i></a>
												|
											<a href="{{ path('task_list_detete_admin', {"id": task.id}) }}" onclick="return confirm('Attention vous vous apprettez à supprimer une tâche P2')"><i class="fas fa-trash"></i></a>
										</td>
									</tr>
								{% endif %}
							{% endif %}
						{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
			<div class="mb-5"></div>
			<div class="row">
				<div class="col">
					<div class="text-center bg-pink-shebam color-white-shebam p-3">Rendez-vous
						<div class="add-icon-custom d-flex flew-row-reverse">				
							<a href="{{ path('task_appointment_add_admin') }}" title="Ajouter un rendez-vous" type="button">
								<i class="fas fa-plus-circle"></i>
							</a>
						</div>
					</div>
					<table class="table table-striped table-light" data-toggle="table">
						<thead class="bg-grey-shebam color-white-shebam">
							<tr>
								<th scope="col">Sujet</th>
								<th scope="col">Objet</th>
								<th>Personne(s)</th>
								<th scope="col">Date et heure</th>
								<th scope="col">Action</th>
							</tr>
						</thead>
						<tbody>
							{% for appointment in appointment %}
								{% if appointment.archived == 0 %}
									<tr>
										<td>{{appointment.name}}</td>
										<td>{{appointment.subject}}</td>
										<td>
										{% for appointment in appointment.user %}
											{{ appointment.firstname }} <br>
										{% endfor %}
										</td>
										<td>{{ appointment.hoursappointment|date("d-m-Y")  }} à {{appointment.hoursappointment|date('H:i')}}</td>
										<td>
											<a href="{{ path('task_appointment_modify_admin', {"id": appointment.id}) }}"><i class="fas fa-cog"></i></a>
												|
											<a href="{{ path('task_archived_admin', {"id": appointment.id}) }}"><i class="fas fa-folder-plus"></i></a>
												|
											<a href="{{ path('appointment_detete_home', {"id": appointment.id}) }}" onclick="return confirm('Attention vous vous apprettez à supprimer un rendez-vous')"><i class="fas fa-trash"></i></a>
										</td>
									</tr>
								{% endif %}
							{% endfor %}
						</tbody>
					</table>
				</div>
				<div class="col">
					<div class="text-center bg-blue-light-shebam color-white-shebam p-3 align-bottom">Devis
						<div class="add-icon-custom d-flex flew-row-reverse">				
							<a href="{{ path('task_quote_add_admin') }}" title="Ajouter un devis" type="button">
								<i class="fas fa-plus-circle"></i>
							</a>
						</div>
					</div>
					<table class="table table-striped table-light" data-toggle="table">
						<thead class="bg-grey-shebam color-white-shebam">
							<tr>
								<th scope="col">Sujet</th>
								<th scope="col">Objet</th>
								<th scope="col">Personne(s)</th>
								<th scope="col">Action</th>
							</tr>
						</thead>
						<tbody>
							{% for quote in quote %}
								{% if quote.archived == 0 %}
									<tr>
										<td>{{ quote.subject }}</td>
										<td>{{ quote.object }}</td>
										<td>
										{% for quote in quote.person %}
											{{ quote.firstname }} <br>
										{% endfor %}
										</td>
										<td>
											<a href="{{ path('task_quote_modify_admin', {"id": quote.id}) }}"><i class="fas fa-cog"></i></a>
												|
											<a href="{{ path('task_archived_admin', {"id": quote.id}) }}"><i class="fas fa-folder-plus"></i></a>
												|
											<a href="{{ path('quote_detete_home', {"id": quote.id}) }}" onclick="return confirm('Attention vous vous apprettez à supprimer un devis')"><i class="fas fa-trash"></i></a>
										</td>
									</tr>
								{% endif %}
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
			<div class="mb-5"></div>
			{% set taskbool = true %}
            {% for task in task %}
                {% for appointment in appointment %}
                    {% for quote in quote %}
						{% if taskbool %}
							{% if task.archived == true or appointment.archived == true or quote.archived == true %}
								<div class="mt-3 text-center btn-submit-admin-shebam btn pointer-event">Les tâches doivent être désarchivées</div>
							{% else %}	
							<div class="mt-3 text-center btn-submit-admin-shebam btn"><a href="{{ path('task_btn_archived_admin') }}">Archiver l'ensemble</a></div>
							{% endif %}
						{% endif %}
						{% set taskbool = false %}
                    {% endfor %}
                {% endfor %}
            {% endfor %}
        </div>
    </div>  
	{% endblock %}
{% endblock %}
{% block javascripts %}
	{{ parent() }}
	<script>
		$(()=>{
			$("#tableOrderTaskP1").on("reorder-row.bs.table", (e, table, row, old) => {
				$.ajax({
					url: "{{ path('admin_reorder_row')}}",
					method: "POST",
					data: {
						table: JSON.stringify(table),
						context: 1
					},
					dataType: "JSON",
					success: (response)=>{console.log(response)}
				})
			})
		})
	</script>
{% endblock %}
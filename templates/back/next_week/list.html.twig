{% extends 'back/index.html.twig' %}

{% block title %}Liste des tâches - Administration{% endblock %}

{% block body %}

	<link rel="stylesheet" href="{{ asset('assets/js/custom.js') }}">
		{% block title_back_page %}Liste des tâches - Semaine Suivante{% endblock %}
	{% block back_content %}
		<div class="container-xxl">
			<div class="row">
				<div class="col">
					<div class="text-center bg-yellow-shebam color-white-shebam p-3 justify-content-md-center">Priorité 1
						<div class="add-icon-custom d-flex flew-row-reverse">			
							<a href="{{ path('add_task_p1_nw_back') }}" title="Ajouter une tâche" type="button">
								<i class="fas fa-plus-circle"></i>
							</a>
						</div>
					</div>
					<table id="tableOrderTaskP1" class="table mb-5" data-toggle="table" data-use-row-attr-func="true" data-reorderable-rows="true">
						<thead class="bg-grey-shebam color-white-shebam font-weight-bold">
							<tr>
								<th data-field="id" data-visible="false">ID</th>
								<th data-field="customer" data-sortable="true" scope="col">Sujet</th>
								<th data-field="subject" data-sortable="true" scope="col">Objet</th>
								<th data-field="person" data-sortable="true" scope="col">Personne(s)</th>
								<th scope="col">Action</th>
							</tr>
						</thead>
						<tbody>
							{% for task in tasks %}
								{% if task.p1 == 1 and task.p2 == 0 and task.nextweek == 1 %}
									<tr class="bg-white-shebam">
										<td>{{ task.id }}</td>
										<td >{{task.customer}}</td>
										<td>
											{% if task.object is empty %}{% else %}{{task.object}}<br>{% endif %}
											{% if task.subobject1 is empty %}{% else %}{{task.subobject1}}<br>{% endif %} 
											{% if task.subobject2 is empty %}{% else %}{{task.subobject2}}<br>{% endif %}
											{% if task.subobject3 is empty %}{% else %}{{task.subobject3}}<br>{% endif %}
										</td>
										<td>{% for task in task.users %}
												{{ task.firstname }} <br>
											{% endfor %}
										</td>
										<td>
											<a href="{{ path('change_task_nw_to_p2_back', {"id": task.id}) }}"><span>P2</span></a>
												|
											<a href="{{ path('change_task_p1_nw_to_p1_cw_back', {"id": task.id}) }}"><i class="fas fa-undo"></i></a>
												|
											<a href="{{ path('modify_task_p1_nw_back', {"id": task.id}) }}"><i class="fas fa-cog"></i></a>
												|
											<a href="{{ path('detete_task_nw_back', {"id": task.id}) }}" onclick="return confirm('Attention vous vous apprettez à supprimer une tâche P2')"><i class="fas fa-trash"></i></a>
										</td>
									</tr>
								{% endif %}
							{% endfor %}
						</tbody>
					</table>
				</div>

				<div class="col">
					<div class="text-center bg-green-light-shebam color-white-shebam p-3">Priorité 2
						<div class="add-icon-custom d-flex flew-row-reverse">				
							<a href="{{ path('add_task_p2_nw_back') }}" title="Ajouter une tâche" type="button">
								<i class="fas fa-plus-circle"></i>
							</a>
						</div>
					</div>
					<table id="tableOrderTaskP2" class="table" data-toggle="table" data-use-row-attr-func="true" data-reorderable-rows="true">
						<thead class="bg-grey-shebam color-white-shebam font-weight-bold">
							<tr>
								<th data-field="id" data-visible="false">ID</th>
								<th scope="col" data-sortable="true">Sujet</th>
								<th scope="col" data-sortable="true">Objet</th>
								<th scope="col" data-sortable="true">Personne(s)</th>
								<th scope="col" data-sortable="true">Action</th>
							</tr>
						</thead>
						<tbody>
						{% for task in tasks %}
							{% if task.p1 == 0 and task.p2 == 1 and task.nextweek == 1  %}
								<tr class="bg-white-shebam">
									<td>{{task.id}}</td>
									<td>{{task.customer}}</td>
									<td>
										{% if task.object is empty %}{% else %}{{task.object}}<br>{% endif %}
										{% if task.subobject1 is empty %}{% else %}{{task.subobject1}}<br>{% endif %} 
										{% if task.subobject3 is empty %}{% else %}{{task.subobject2}}<br>{% endif %}
										{% if task.subobject3 is empty %}{% else %}{{task.subobject3}}<br>{% endif %}
									</td>
									<td>{% for task in task.users %}
											{{ task.firstname }} <br>
										{% endfor %}
									</td>
									<td>
										<a href="{{ path('change_task_nw_to_p1_back', {"id": task.id}) }}"><span>P1</span></a>
											|
										<a href="{{ path('change_task_p2_nw_to_p2_cw_back', {"id": task.id}) }}"><i class="fas fa-undo"></i></a>
											|
										<a href="{{ path('modify_task_p2_nw_back', {"id": task.id}) }}"><i class="fas fa-cog"></i></a>
											|
										<a href="{{ path('detete_task_nw_back', {"id": task.id}) }}" onclick="return confirm('Attention vous vous apprettez à supprimer une tâche P2')"><i class="fas fa-trash"></i></a>
									</td>
								</tr>
							{% endif %}
						{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
			<div class="mb-5"></div>
			<div class="row">
				<div class="col">
					<div class="text-center bg-pink-shebam color-white-shebam p-3">Rendez-vous
						<div class="add-icon-custom d-flex flew-row-reverse">				
							<a href="{{ path('add_appointment_nw_back') }}" title="Ajouter un rendez-vous" type="button">
								<i class="fas fa-plus-circle"></i>
							</a>
						</div>
					</div>
					<table class="table" data-toggle="table">
						<thead class="bg-grey-shebam color-white-shebam font-weight-bold">
							<tr>
								<th scope="col">Sujet</th>
								<th scope="col">Objet</th>
								<th>Personne(s)</th>
								<th scope="col">Date et heure</th>
								<th scope="col">Action</th>
							</tr>
						</thead>
						<tbody>
							{% for appointment in appointments %}
								{% if  appointment.nextweek == 1 %}
									<tr class="bg-white-shebam">
										<td>{{appointment.name}}</td>
										<td>{{appointment.subject}}</td>
										<td>
										{% for appointment in appointment.user %}
											{{ appointment.firstname }} <br>
										{% endfor %}
										</td>
										<td>{{ appointment.hoursappointment|date("d-m-Y")  }} à {{appointment.hoursappointment|date('H:i')}}</td>
										<td>
											<a href="{{ path('change_appointment_nw_to_cw_back', {"id": appointment.id}) }}"><i class="fas fa-undo"></i></a>
													|
											<a href="{{ path('modify_appointment_nw_back', {"id": appointment.id}) }}"><i class="fas fa-cog"></i></a>
													|
											<a href="{{ path('delete_appointment_nw_back', {"id": appointment.id}) }}" onclick="return confirm('Attention vous vous apprettez à supprimer un rendez-vous')"><i class="fas fa-trash"></i></a>
										</td>
									</tr>
								{% endif %}
							{% endfor %}
						</tbody>
					</table>
				</div>
				<div class="col">
					<div class="text-center bg-blue-light-shebam color-white-shebam p-3 align-bottom">Devis
						<div class="add-icon-custom d-flex flew-row-reverse">				
							<a href="{{ path('add_quote_nw_back') }}" title="Ajouter un devis" type="button">
								<i class="fas fa-plus-circle"></i>
							</a>
						</div>
					</div>
					<table class="table" data-toggle="table">
						<thead class="bg-grey-shebam color-white-shebam font-weight-bold">
							<tr>
								<th scope="col">Sujet</th>
								<th scope="col">Objet</th>
								<th scope="col">Personne(s)</th>
								<th scope="col">Action</th>
							</tr>
						</thead>
						<tbody>
							{% for quote in quotes %}
								{% if  quote.nextweek == 1 %}
									<tr class="bg-white-shebam">
										<td>{{ quote.subject }}</td>
										<td>{{ quote.object }}</td>
										<td>
										{% for quote in quote.person %}
											{{ quote.firstname }} <br>
										{% endfor %}
										</td>
										<td>
											<a href="{{ path('change_quote_nw_to_cw_back', {"id": quote.id}) }}"><i class="fas fa-undo"></i></a>
													|
											<a href="{{ path('modify_quote_nw_back', {"id": quote.id}) }}"><i class="fas fa-cog"></i></a>
													|
											<a href="{{ path('delete_quote_nw_back', {"id": quote.id}) }}" onclick="return confirm('Attention vous vous apprettez à supprimer un devis')"><i class="fas fa-trash"></i></a>
										</td>
									</tr>
								{% endif %}
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
			<div class="mb-5"></div>

			<div class="mt-3 text-center btn-submit-back btn"><a href="{{path('change_task_to_cw_back') }}">Transférer vers la semaine actuelle</a></div>
			
        </div>
    </div>  
	{% endblock %}
{% endblock %}
{% block javascripts %}
	{{ parent() }}
	<script>
		$(()=>{
			$("#tableOrderTaskP1").on("reorder-row.bs.table", (e, table, row, old) => {
				$.ajax({
					url: "{{ path('reorder_row_nw_back')}}",
					method: "POST",
					data: {
						table: JSON.stringify(table),
						context: 1
					},
					dataType: "JSON",
					success: (response)=>{console.log(response)}
				})
			})
			$("#tableOrderTaskP2").on("reorder-row.bs.table", (e, table, row, old) => {
				$.ajax({
					url: "{{ path('reorder_row_nw_back')}}",
					method: "POST",
					data: {
						table: JSON.stringify(table),
						context: 1
					},
					dataType: "JSON",
					success: (response)=>{console.log(response)}
				})
			})
		})
	</script>
{% endblock %}
{% extends 'base_login_register.html.twig' %}

{% block title %}Inscription - {% block title_base %}{{ parent() }}{% endblock %}{% endblock %}
{% block content %}
	<img class="d-block mx-auto mb-5" src="{{ asset('/assets/images/logo-login-todolist.png') }}" alt="Logo de connexion To Do List">
    <div class="form-login text-center bg-white">
        <h1 class="color-yellow">Inscription</h1>
        {% if notification %}
            <hr>
                <div class="form-success text-center text-bold">{{ notification }}</div>
            <hr>
        {% endif %}
            {{ form_start(form) }}
        <div class="form-group">
            {{ form_widget(form) }}
        </div>
            {{ form_end(form) }}
        <span class="text-login"> Déjà inscrit ? </span><a href="{{ path('home') }}" class="text-login-link">Connectez-vous</a>
    </div>
{%  endblock %}



{% extends 'base_login.html.twig' %}
{% block content %}
<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{%  block title %}Accueil - {% block title_base %}{{ parent() }}{% endblock %}{% endblock %}</title>
    </style>
</head>
	<body>
		<img class="d-block mx-auto" src="{{ asset('/assets/images/logo-login-todolist.png') }}" alt="Logo de connexion To Do List">
		<div class="mb-5"></div>
		<form class="form-login text-center bg-white-shebam" method="post">
		{% if error %}
			<div class="message-error">{{ error.messageKey|trans(error.messageData, 'security') }}</div><br>
		{% endif %}
			<div class="form-group mt-4">
				<input class="input-group-lg mb-3 form-control" type="email" value="{{ last_username }}" name="email" placeholder="Email" required autofocus>
			</div>
				<input class="field form-control input-sm" type="password" name="password" placeholder="Mot de passe" required>
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<div class="form-group">
				<input type="submit" name="submit" class="btn-md btn-yellow-login mt-3" value="Connexion">
			</div>
			<div id="register-link" class="text-left mt-5">
			<span class="text-login"> Aie c'est quoi déjà ? - </span><a class="text-login-link" href="{{path('app_forgot_password_request')}}" > Mot de passe oublié</a><br>
			<span class="text-login"> Pas encore inscrit ? - </span><a class="text-login-link" href="{{path('register')}}"> Inscription</a>
			</div>
		</form>
	</body>
</html>
{%  endblock %}
{% extends 'base.html.twig' %}

{% block title %}Modidier le devis de {{quote.subject}} - Semaine Actuelle - {% block title_base %}{{ parent() }}{% endblock %}{% endblock %}

{% block body %}
	<div>
		{% block title_back_page %}Modidier le devis de {{quote.subject}} - Semaine Actuelle{% endblock %}
	</div>
	{% block content %}
		<div class="container">
			<div class="mb-3 text-center"><a class="btn-yellow-form" href="{{ path('current_week_quote') }}">Retour</a></div>
			<h4 class="color-white text-center mb-5"> Semaine Actuelle - Modification du devis : {{ quote.subject}} </h4>
		</div>
		<div class="form-front">
			{% if notification %}
				<hr>
					<div class="form-success text-center text-bold">{{ notification }}<br>
						<hr>
							<a href="{{ path('current_week_quote') }}">Retourner sur la liste</a>
					</div>
				<hr>
			{% endif %}
				{{ form_start(form_quote_cw_modify) }}
			<div class="form-group">
				{{ form_row(form_quote_cw_modify.subject) }}
				{{ form_row(form_quote_cw_modify.object) }}
				<p class="text-left color-yellow text-bold">Personne(s)</p>
				<div class="bg-black-light text-left users mb-3">
					{{ form_row(form_quote_cw_modify.person) }}
				</div>
				{{ form_row(form_quote_cw_modify.submit) }}
			</div>
				{{ form_end(form_quote_cw_modify) }}
	{% endblock %}
	</div>
{% endblock %}
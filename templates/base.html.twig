<!doctype html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{%  block title %}{% block title_base %}Liste des tâches{% endblock %}{% endblock %}</title>
    <link rel="icon" href="{{ asset('assets/images/logo-to-do-list-vert.ico') }}" />
    {% block stylesheets %}

        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" rel="stylesheet" crossorigin="anonymous">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
        <link href="https://unpkg.com/bootstrap-table@1.18.3/dist/extensions/reorder-rows/bootstrap-table-reorder-rows.css" rel="stylesheet">
        <link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.16.0/dist/bootstrap-table.min.css">
        <link href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/css/root.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/css/front/custom.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/css/motdepasse.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/css/front/responsive.css') }}" rel="stylesheet">
    {% endblock %}
</head>
<body>
    <header>
        
        <nav class="navbar-expand-sm navbar-dark bg-yellow">
            <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}" style="color: var(--color-blue-dark)"><i class="fas fa-unlock"></i>&nbsp; Déconnexion</i></a>
                    </li>
                </ul>
            </div>
        </nav>
                
        <nav class="navbar navbar-expand-lg bg-blue-dark mx-auto">
            <a href="{{ path('current_week') }}">
		        <img class="d-block mx-auto" src="{{ asset('/assets/images/logo-todolist.png') }}" alt="Logo de connexion To Do List">
            </a>
            <ul class="navbar-nav ml-auto">
            {% if app.user %}
                {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item active"> 
                            <a class="navbar-text text-uppercase text-border" href="{{ path('current_week') }}">Semaine actuelle</a>
                        </li>
                        <li class="nav-item active"> 
                            <a class="navbar-text color-blue-dark text-uppercase" href="{{ path('next_week') }}">Semaine suivante</a>
                        </li>
                        <li class="nav-item active">
                            <a href="https://projetsclients.shebam.fr/" target="new" class="navbar-text color-blue text-uppercase">Projets Clients</a>
                        </li>
                        <li>
                            <a class="navbar-text color-blue-dark text-uppercase" title="Aller sur l'administration" href="{{ path('list_cw_mission_back')}}">Administration</a>
                        </li>
                {% endif %}
            {% endif %}
            </ul> 
        </nav>

        <nav class="mobile-bottom-nav">
            {% if app.user %}
                {% if is_granted('ROLE_ADMIN') %}
                    <div class="mobile-bottom-nav__item">
                        <div class="mobile-bottom-nav__item-content">
                            <a href="{{ path('list_cw_mission_back') }}"><i class="fas fa-tools"></i><br>Admin</a>
                        </div>		
                    </div>
                {% endif %}
            {% endif %}
            {% if app.user %}
                {% if is_granted('ROLE_USER') %}
                    <div class="mobile-bottom-nav__item">
                        <div class="mobile-bottom-nav__item-content">
                            <a href="{{ path('home') }}"><i class="fas fa-home"></i><br>Tâches en cours</a>
                        </div>		
                    </div>
                {% endif %}
            {% endif %} 
            {% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            <div class="mobile-bottom-nav__item">
                <div class="mobile-bottom-nav__item-content">
                    <a href="{{ path('register') }}"><i class="fas fa-user-plus"></i><br>Inscription</a>
                </div>		
            </div>
            {% endif %}
        </nav>
    </header>

    <main role="main">
        <div class="container-fluid" style="margin-top: 150px;">
            {% block content %}{% endblock %}
        </div>
    </main>

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/TableDnD/1.0.3/jquery.tablednd.min.js"></script>
    <script src="{{ asset('assets/js/bootstrap.bundle.js') }}"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/bootstrap-table@1.16.0/dist/bootstrap-table.min.js"></script>
    <script src="https://unpkg.com/bootstrap-table@1.16.0/dist/locale/bootstrap-table-fr-FR.min.js"></script>
    <script src="https://unpkg.com/bootstrap-table@1.18.3/dist/extensions/reorder-rows/bootstrap-table-reorder-rows.min.js"></script>
    <script src="{{ asset('assets/js/motdepasse.js') }}"></script>
<script src="{{ asset('assets/js/custom.js') }}"></script>
{% endblock %}

</body>
</html>
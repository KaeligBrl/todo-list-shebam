<!doctype html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{%  block title %}{% block title_base %}Liste des tâches{% endblock %}{% endblock %}</title>
    <link rel="icon" href="{{ asset('assets/images/logo-to-do-list-vert.ico') }}" />
    {% block stylesheets %}

        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" rel="stylesheet" crossorigin="anonymous">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
        <link href="https://unpkg.com/bootstrap-table@1.18.3/dist/extensions/reorder-rows/bootstrap-table-reorder-rows.css" rel="stylesheet">
        <link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.16.0/dist/bootstrap-table.min.css">
        <link href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/css/root.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/css/front/custom.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/css/motdepasse.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/css/front/responsive.css') }}" rel="stylesheet">
    {% endblock %}
</head>
<body>
    <header>
            <nav class="navbar-expand-lg text-right navbar-dark bg-yellow pr-2">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavTopBar" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="" role="button" ><i class="fa fa-bars" aria-hidden="true" style="color:#e6e6ff"></i></span>
            </button>
                <div class="navbar-collapse collapse w-100 order-3 dual-collapse2" id="navbarNavTopBar">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="https://projetsclients.shebam.fr/" target="new" style="color: var(--color-blue-dark)">&nbsp; Projets Clients</i></a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link" href="http://rappels.shebam.fr/" target="new" style="color: var(--color-blue-dark)">&nbsp; Rappels Clients</i></a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}" style="color: var(--color-blue-dark)"><i class="fas fa-unlock"></i>&nbsp; Déconnexion</i></a>
                        </li>
                    </ul>
                </div>
            </nav>
        <nav class="navbar navbar-expand-lg bg-blue-dark">
            <a href="{{ path('current_week_p1') }}">
		        <img class="d-block mx-auto" src="{{ asset('/assets/images/logo-todolist.png') }}" alt="Logo de connexion To Do List">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="" role="button" ><i class="fa fa-bars" aria-hidden="true" style="color:#e6e6ff"></i></span>
            </button>
            <div class="collapse navbar-collapse bg-blue-dark text-center p-4" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                {% if app.user %}
                    {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item"> 
                                <a class="
                                            {% if app.request.attributes.get('_route') starts with 'current_week_p1' %}active{% endif %}
                                            {% if app.request.attributes.get('_route') starts with 'current_week_p2' %}active{% endif %}
                                            {% if app.request.attributes.get('_route') starts with 'current_week_quote' %}active{% endif %}
                                            {% if app.request.attributes.get('_route') starts with 'current_week_appointment' %}active{% endif %}
                                            {% if app.request.attributes.get('_route') starts with 'modify_task_cw_p1' %}active{% endif %}
                                            {% if app.request.attributes.get('_route') starts with 'modify_task_cw_p2' %}active{% endif %}
                                            {% if app.request.attributes.get('_route') starts with 'modify_quote_cw' %}active{% endif %}
                                            {% if app.request.attributes.get('_route') starts with 'current_week_waiting_return' %}active{% endif %}
                                            {% if app.request.attributes.get('_route') starts with 'current_week_modify_waiting_return' %}active{% endif %}
                                            {% if app.request.attributes.get('_route') starts with 'current_week_modify_waiting_return' %}active{% endif %}
                                            navbar-text text-uppercase" href="{{ path('current_week_p1') }}">Semaine actuelle</a>
                            </li>
                            <li class="nav-item"> 
                                <a class="
                                            {% if app.request.attributes.get('_route') starts with 'next_week_p1' %}active{% endif %}
                                            {% if app.request.attributes.get('_route') starts with 'next_week_p2' %}active{% endif %}
                                            {% if app.request.attributes.get('_route') starts with 'next_week_quote' %}active{% endif %}
                                            {% if app.request.attributes.get('_route') starts with 'next_week_appointment' %}active{% endif %}
                                            {% if app.request.attributes.get('_route') starts with 'modify_task_nw_p2' %}active{% endif %}
                                            {% if app.request.attributes.get('_route') starts with 'modify_task_p1_nw' %}active{% endif %}
                                            {% if app.request.attributes.get('_route') starts with 'modify_nw_appointment' %}active{% endif %}
                                            {% if app.request.attributes.get('_route') starts with 'modify_quote_nw' %}active{% endif %}
                                            {% if app.request.attributes.get('_route') starts with 'next_week_waiting_return' %}active{% endif %}
                                            {% if app.request.attributes.get('_route') starts with 'next_week_modify_waiting_return' %}active{% endif %}
                                            navbar-text color-blue-dark text-uppercase" href="{{ path('next_week_p1') }}">Semaine suivante</a>
                            </li>
                            <li>
                                <a class="{% if app.request.attributes.get('_route') starts with 'list_customer' %}active{% endif %} navbar-text color-blue-dark text-uppercase" title="Aller sur l'administration" href="{{ path('list_customer') }}">Administration</a>
                            </li>
                    {% endif %}
                {% endif %}
                </ul> 
            </div>
        </nav>
    </header>

    <main role="main">
        <div class="container-fluid" style="margin-top: 100px;">
            {% block content %}{% endblock %}
        </div>
    </main>

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/TableDnD/1.0.3/jquery.tablednd.min.js"></script>
    <script src="{{ asset('assets/js/bootstrap.bundle.js') }}"></script>
    <script src="{{ asset('assets/js/checkbox.js') }}"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/bootstrap-table@1.16.0/dist/bootstrap-table.min.js"></script>
    <script src="https://unpkg.com/bootstrap-table@1.16.0/dist/locale/bootstrap-table-fr-FR.min.js"></script>
    <script src="https://unpkg.com/bootstrap-table@1.18.3/dist/extensions/reorder-rows/bootstrap-table-reorder-rows.min.js"></script>
    <script src="{{ asset('assets/js/motdepasse.js') }}"></script>
    <script src="{{ asset('assets/js/custom.js') }}"></script>
    <script src="{{ asset('assets/js/checkbox.js') }}"></script>
{% endblock %}

</body>
</html>